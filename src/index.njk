---
layout: layout.njk
title: "Home"
description: "Welcome to Blake Porter’s travel site"
bodyClass: "homepage"
headerVariant: "special-homepage-header"
---

{% block content %}
  <!-- Hero Section -->
  <section class="hero">
    <a href="#" id="planBtn" class="btn hero-btn">Plan Your Journey</a>
  </section>

  <!-- Featured Guides -->
  <section class="container featured-guides">
    <h2 class="section-title">Featured Guides</h2>
    <ul class="guide-grid">
      {% for guide in collections.guides %}
        <li class="guide-card">
          <a href="{{ guide.url }}">
            <img
              src="{{ guide.data.banner }}"
              alt="{{ guide.data.title }} Banner">
            <h3>{{ guide.data.title }}</h3>
          </a>
        </li>
      {% endfor %}
    </ul>
  </section>

  <!-- Photo Gallery -->
  <section class="container photo-gallery">
    <h2 class="section-title">Photo Gallery</h2>
    <ul class="gallery-grid">
      <!-- Note: each src below must match an actual file under src/assets/images/placeholders/ -->
      <li class="gallery-item">
        <img
          src="/assets/images/placeholders/fuji_sunset.jpg"
          alt="Fuji Sunset">
      </li>
      <li class="gallery-item">
        <img
          src="/assets/images/placeholders/hongkong_buddha.jpg"
          alt="Hong Kong Buddha">
      </li>
      <li class="gallery-item">
        <img
          src="/assets/images/placeholders/sequoia_camping.jpg"
          alt="Sequoia Camping">
      </li>
      <li class="gallery-item">
        <img
          src="/assets/images/placeholders/autumn_photographer.jpg"
          alt="Autumn Photographer">
      </li>
      <li class="gallery-item">
        <img
          src="/assets/images/placeholders/bridge_reflection.jpg"
          alt="Bridge Reflection">
      </li>
      <li class="gallery-item">
        <img
          src="/assets/images/placeholders/keio_snow.jpg"
          alt="Keio Snow">
      </li>
      <li class="gallery-item">
        <img
          src="/assets/images/placeholders/shibuya_snow.jpg"
          alt="Shibuya Snow">
      </li>
    </ul>
  </section>

  <!-- Footer (if you want a secondary footer here, otherwise layout’s footer will render) -->
  <footer class="site-footer">
    <p>&copy; 2025 Blake Porter. All rights reserved.</p>
    <div class="social-links">
      <a href="#">Instagram</a>
      <a href="#">Twitter</a>
      <a href="#">Facebook</a>
    </div>
  </footer>

  <script src="/assets/js/main.js" defer></script>
{% endblock %}
