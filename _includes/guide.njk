{% extends "layout.njk" %}
{% block content %}
<article class="guide-post container">
  <h1>{{ title }}</h1>
  <p>{{ date }} • {{ readTime }} • {{ region }}</p>
  {% if bannerImage %}<img src="{{ bannerImage }}" alt="{{ bannerAlt or title }}">{% endif %}
  {{ content | safe }}
</article>
{% endblock %}