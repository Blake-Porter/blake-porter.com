{% extends "layout.njk" %}
{% block content %}

<article class="guide-post container">
  <header class="guide-header">
    <h1 class="guide-title">{{ title }}</h1>
    <p class="guide-meta">{{ date }} • {{ readTime }} • {{ region | capitalize }}</p>
  </header>

  {% if bannerImage %}
  <figure class="guide-banner">
    <img src="{{ bannerImage }}" alt="{{ bannerAlt or title }}" class="responsive-img">
  </figure>
  {% endif %}

  <div class="guide-content">{{ content | safe }}</div>

  <footer class="guide-footer">
    <p>Enjoyed this guide? <a href="/contact/">Get in touch</a> for more!</p>
  </footer>
</article>

{% endblock %}