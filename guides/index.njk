---
title: "Travel Guides"
description: "Curated travel guides by Blake Porter"
layout: layout.njk
permalink: "/guides/"
---

<section class="guides-controls container">
  <button class="filter-btn active"    data-filter="all"         aria-pressed="true">All</button>
  <button class="filter-btn"           data-filter="itineraries" aria-pressed="false">Itineraries</button>
  <button class="filter-btn"           data-filter="explore"     aria-pressed="false">Explore</button>
  <button class="filter-btn"           data-filter="tips-gear"   aria-pressed="false">Tips & Gear</button>
</section>

<section class="guide-grid container">
  {% for guide in collections.guides %}
  <article class="guide-card" data-category="{{ guide.data.category }}">
    <a href="{{ guide.url }}">
      <img src="{{ guide.data.bannerImage }}" alt="{{ guide.data.bannerAlt or guide.data.title }}" class="guide-thumbnail">
      <div class="guide-summary">
        <h3>{{ guide.data.title }}</h3>
        <p>{{ guide.data.description }}</p>
        <p class="guide-meta">{{ guide.data.readTime }} â€¢ {{ guide.data.region | capitalize }}</p>
      </div>
    </a>
  </article>
  {% endfor %}
</section>
<script src="/resources/js/guides.js"></script>